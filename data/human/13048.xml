			<titleStmt>
				<title subtype="file">Johannes Haller d.J. / [Augsburg] an Heinrich Bullinger, 26. August 1547</title>
			</titleStmt>
			<publicationStmt>
				<authority>Universität Zürich</authority>
				</publicationStmt>
